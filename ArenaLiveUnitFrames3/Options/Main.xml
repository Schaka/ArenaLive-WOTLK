<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	
	<Frame name="ALUF_Options" hidden="true">
		<Layers>
			<Layer level="BACKGROUND">
				<FontString name="$parentTitle" inherits="GameFontNormalLarge" >
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="15" y="-15"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentCCTitle" inherits="GameFontNormal" >
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="15" y="-150"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="$parentCCDescription" inherits="GameFontHighlightSmall" justifyH="LEFT">
					<Size>
						<AbsDimension x="600" />
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parentCCTitle" relativePoint="BOTTOMLEFT">
							<Offset>
								<AbsDimension x="0" y="-5" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
	</Frame>
	
	<Script File="Main.lua" />
</Ui>